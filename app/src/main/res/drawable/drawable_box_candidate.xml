<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPurple600" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- Top color -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <corners android:radius="1dp" />
            <size
                android:width="300dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>