<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorRedPrimary" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Top color -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorRedPrimary" />
            <corners android:radius="3dp" />
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>
</layer-list>