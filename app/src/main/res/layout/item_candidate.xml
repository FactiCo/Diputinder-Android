<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_candidate_iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@drawable/drawable_bgr_gray"
            android:scaleType="centerCrop" />

        <mx.com.factico.diputinder.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="1dp"
            android:background="@drawable/drawable_box_indicators"
            android:gravity="end"
            android:padding="10dp"
            android:text="Ver indicadores"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorWhite"
            app:typeface="Gotham_Rounded_Book" />

        <ImageView
            android:id="@+id/item_candidate_iv_profile_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_info"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/item_candidate_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <mx.com.factico.diputinder.views.CustomTextView
                android:id="@+id/item_candidate_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/drawable_box_candidate"
                android:gravity="center_vertical"
                android:minLines="2"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="100dp"
                android:paddingTop="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBackgroundWhite"
                app:typeface="Gotham_Rounded_Bold" />

            <!--<com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_candidate_iv_partido"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawable_bgr_circle"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/drawable_bgr_circle"
                app:riv_mutate_background="true"
                app:riv_oval="true" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_candidate_iv_partido"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@android:color/black"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="4dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#A5F"
        android:visibility="gone" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#5AF"
        android:visibility="gone" />

</FrameLayout>