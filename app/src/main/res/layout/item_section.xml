<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/item.section.image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitStart"
        android:src="@null"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="13%" />

    <mx.com.factico.diputinder.views.CustomTextView
        android:id="@+id/item.section.name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item.section.image"
        android:layout_toStartOf="@+id/item.section.document"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text=""
        android:textColor="@color/colorDeepLavender"
        android:textSize="16sp"
        app:typeface="Gotham_Rounded_Bold" />

    <LinearLayout
        android:id="@+id/item.section.answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item.section.name_label"
        android:layout_toEndOf="@+id/item.section.image"
        android:layout_toStartOf="@+id/item.section.document"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/item.section.document"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_document_pdf"
        android:visibility="gone"
        app:layout_aspectRatio="130%"
        app:layout_widthPercent="18%" />

</android.support.percent.PercentRelativeLayout>