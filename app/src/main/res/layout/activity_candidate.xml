                </RelativeLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/candidate_iv_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="1dp"
                    android:background="@drawable/drawable_bgr_circle_purple"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <mx.com.factico.diputinder.views.CustomTextView
                        android:id="@+id/candidate_tv_partido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:text="Partido"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorTextTitle"
                        app:typeface="Gotham_Rounded_Bold" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/candidate_iv_partido"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/drawable_bgr_circle"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/candidate_vg_alianzas_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <mx.com.factico.diputinder.views.CustomTextView
                        android:id="@+id/candidate_tv_alianzas"
                        android:layout_width="wrap_content"
