            </LinearLayout>

        <LinearLayout
            android:id="@+id/candidate_vg_indicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
