                    <mx.com.factico.diputinder.views.CustomTextView
                        android:id="@+id/candidate_tv_entidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/candidate_tv_cargo"
