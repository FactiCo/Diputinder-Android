<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Fullscreen -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--
             colorAccent is used as the default value for colorControlActivated,
         	which is used to tint widgets
        -->
        <item name="colorAccent">@color/colorAccent</item>

        <!--
         You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal.
        -->
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>

        <item name="SwipeFlingStyle">@style/SwipeFling</item>

        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">2dp</item>
        <item name="lineWidth">15dp</item>
        <item name="unselectedColor">@color/colorBackgroundWhite</item>
        <item name="selectedColor">@color/colorBackgroundWhite</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/colorBackgroundWhite</item>
        <item name="strokeColor">@color/colorBackgroundWhite</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>
</resources>
